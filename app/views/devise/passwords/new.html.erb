<h2 class="devise-header">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "devise-form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "devise-button" %>
  </div>
  <div class="links">
    <%= render "devise/shared/links" %><br />
  </div>
<% end %>
